<h1>Beer Cult</h1>
{{#each brewery}}
    <div>
        <div>Name: <a href="/brewery/{{this._id}}">{{this.name}}</a></div>
        <div>Beers:
            <ul>
                {{#each this.beers}}
                <li>Name: <a href="/brewery/{{this._id}}/beers">{{this.name}}</a></li>
                {{/each}}
            </ul>


        <a href="/brewery/{{this._id}}/delete">Delete {{this.name}}</a>
        <a href="/brewery/{{this._id}}/edit">Edit {{this.name}}</a>
    </div>
{{/each}}
    </div>
        <a href="/brewery/new">Add a New Brewery</a>
    </div>
